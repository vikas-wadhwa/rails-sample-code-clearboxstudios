

<% content_for :title do %>
    <title>Reset password</title>
<% end %>

<% content_for :foot do %>
    <script> var flashFrameAlways = true; </script>
<% end %>



<h1 class='orange'>Reset password</h1>

<div class="column no-padding medium-8 large-5 end">

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => '' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div>
        <%= f.label :password, "New password" %>
        <%= f.password_field :password %>
      </div>

      <br>

      <div>
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation %>
      </div>


      <div class="space-above"><%= f.submit "Reset password" ,class: "button small secondary" %></div>

  <% end %>

  <%= render "devise/shared/links" %>


</div>