<% @content_frame = 'email' %>

<%= email_heading("Hello " +  @resource.profile.name_first + ",") %>
<%= email_subheading("A request has been made to change your password. Click below to do so.") %>
<%= email_button("RESET PASSWORD", edit_password_url(@resource, :reset_password_token => @token)) %>

<%= email_text(

  "If you didn't request this, please ignore this email.
  <br>
  Your password won't change until you access the link above and create a new one.

  ") %>


<%= render 'layouts/email_footer_accounts' %>



