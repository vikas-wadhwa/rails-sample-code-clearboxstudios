

<% content_for :title do %>
    <title><%= @invoice.account.company_name %> - Invoice #<%= @invoice.id %></title>
<% end %>

<% content_for :head do %>
    <%= stylesheet_link_tag "invoices" , :media => 'all' %>

    <script>
        var invoice_id = <%= @invoice.id %>;
    </script>

<% end %>

<% content_for :foot do %>
    <%= javascript_include_tag "invoices.js" %>
<% end %>



<% @breadcrumbs = {history: [{text: 'Invoices', url: invoices_url}], current: @invoice.id.to_s} %>
<%= render 'layouts/breadcrumb' %>
<%= render 'toolbar' %>



<%= render 'printable' %>


<% content_for :modal do %>

    <div id="email_sending_modal" class="small reveal" data-reveal aria-labelledby="" role="dialog">

      <h2 class="orange text-center">Sending Invoice</h2>

    </div>


    <div id="email_sent_modal" class="small reveal" data-reveal aria-labelledby="" role="dialog">

      <h2 class="orange text-center">Invoice Sent</h2>
      <p class="text-center">Invoice #<%= @invoice.id %> has been sent to <b id="sent_to_email"></b></p>

      <div class="row submission">
        <button class="close-button button secondary" data-close aria-label="Close reveal" type="button">Close</button>
      </div>

    </div>
<% end %>