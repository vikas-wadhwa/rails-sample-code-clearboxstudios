/******************************************************
** Import variables
******************************************************/
@import "global/variables";

/******************************************************
** General menu containers
******************************************************/

ul.tabs {
    border: none;
    border-bottom: none;
    text-align: left;
}


.row.no-child-padding .column,
.row.no-child-padding .columns {
    margin: 0 !important;
    padding: 0 !important;
}

.photos-wrapper,
.videos-wrapper {
    background: black;
}


.portfolio-image {
    -webkit-background-size: cover !important;
    -moz-background-size: cover !important;
    -o-background-size: cover !important;
    background-size: cover !important;
}

a.portfolio-image {
    display: block;
}

.mfp-bottom-bar {
    top: initial;
    bottom: 40px;
    font-size: 13px;
}

.mfp-title {
    padding: 2em;
    background-color: rgba(0, 0, 0, 0.7);
}

.mfp-counter {
    top: initial;
    bottom: 5px;
    right: 10px;
    font-size: 1em;
}

.popup-item img {
    padding: .1em;
}

.popup-item:hover {
    cursor: pointer;
}

.image-gallery-placeholder {

}

.image-gallery-title,
.video-gallery-title {
    font-weight: 100;
    color: rgb(248, 152, 29);
    background: rgb(0, 0, 0);
    line-height: 1.25;
}

.height-5x7 {
    padding: 0.1% !important;
    margin-top: -0.1% !important;
}

.height-7x5 img {
    padding: 2.4% !important;
    margin-top: -1.9% !important;
}


/******************************************************
** max-width 640px, mobile-only styles, use when QAing mobile issues
******************************************************/
@media only screen and (max-width: 40em) {

    .videos-wrapper {
        font-size: 12px;
    }

    .media-description {
        padding: 2em .25em .25em .25em;
    }

    .image-gallery-title,
    .video-gallery-title {
        font-size: 35px;
        padding: 20% 0;
    }

}




/******************************************************
** min-width 641px, medium screens
******************************************************/
@media only screen and (min-width: 40.063em) and (max-width: 64em) {

    .videos-wrapper .medium-4 {
        font-size: 11px;
    }

    .videos-wrapper .medium-8 {
        font-size: 12px;
    }

    .media-description {
        padding: 1em;
    }

    .image-gallery-title,
    .video-gallery-title {
        font-size: 35px;
        padding: 16% 0;
    }

    .height-7x5 .image-gallery-title {
        padding: 20% 0;
    }

}



/******************************************************
** min-width 641px, medium screens
******************************************************/
@media only screen and (min-width: 64.063em) {

    .videos-wrapper .medium-4 {
        font-size: 13px;
    }

    .videos-wrapper .medium-8 {
        font-size: 15px;
    }

    .media-description {
    }

    .image-gallery-title,
    .video-gallery-title {
        font-size: 50px;
        padding: 16% 0;
    }

    .height-7x5 .image-gallery-title {
        padding: 25% 0;
    }

}




