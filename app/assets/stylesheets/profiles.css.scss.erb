/******************************************************
** Import variables
******************************************************/
@import "global/variables";



/******************************************************
** Main content
******************************************************/

#main-content {
    min-height: 55em;
}

textarea {
    min-height: 16em;
}

/******************************************************
** Checkboxes
******************************************************/
.icon-checkbox,
.icon-checkbox-checked {
    cursor: pointer;
    display: inline-block;
    width: 1em;
}

.icon-checkbox {
    color: $gray-200;
}

.icon-checkbox-checked {
    color: $orange;
}


/******************************************************
** Images & Photo gallery
******************************************************/

.profile-image {
    width: 300px;
}

.photo-gallery .sidebar-links {
  display: block;
  width: 90%;
  color: $gray-75;
  padding: .2em;
  border: 1px solid white;
}

.photo-gallery .sidebar-links.bold {
  font-weight: bold;
}

.photo-gallery .sidebar-links:hover {
  border: 1px solid $gray-50;
  background: $orange;
}

.photo-is-profile {
  border: 2px solid $orange;
}

/******************************************************
** Labels and descrptions
******************************************************/
label.social i {
    width: 3em;
}

.description-box h5 {
    margin-right: 1em;
}


/******************************************************
** Video Gallery
******************************************************/
.video-gallery li {
    position: relative;
}