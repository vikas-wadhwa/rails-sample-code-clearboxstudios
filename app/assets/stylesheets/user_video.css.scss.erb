/******************************************************
** Import variables
******************************************************/
@import "global/variables";


.screencredit-line input {
  margin: 0;
  height: 50px;
  padding: 0 10px;
  font-size: 18px;
}

.icon-cancel {
    line-height: 1.8em;
}

.autocomplete-image,
.autocomplete-text {
    vertical-align: middle;
}

.autocomplete-image {
    width: 40px;
    margin-right: .5em;
}


.autocomplete-credits, .autocomplete-users {
  float: left;
  margin-right: 1em;
}

label.autocomplete-credits {
  width: 16em;
}

input.autocomplete-credits {
  width: 15em;
}

label.autocomplete-users {
  width: 19em;
}

input.autocomplete-users {
  width: 18em;
}