/******************************************************
** Import variables
******************************************************/
@import "global/variables";

.invoice-header {
    display:none;
}

.bordered {
    padding: 0 1em;
    border-left: 1px dotted $gray-150;
    border-right: 1px dotted $gray-150;
    min-height: 17.5em;
}

.vcard {
    border: none;
    padding: 0;
    margin: 0;
}

.tiny-thumb-image {
    width: 50px;
    height: 50px;
    display: inline-block;
    vertical-align: middle;
}

.tiny-thumb-name {

}

.tiny-thumb img {
    margin-right: 0.5em;
}

.model-details.tight .model-stats {
    padding: 0 2rem .85rem 0;
}

.search-results .search-summary {
    min-width: 6em;
}



@media print {

    body * {
        color: black !important;
    }

    html,
    th,
    td {
        font-size: 11px;
    }

    .tiny-thumb-image,
    a[href]:after {
        display: none;
    }

    .space-above {
        //margin-top: 2em !important;
    }

    .space-above-2x {
        //margin-top: 4em !important;
    }

    .left-off-canvas-menu,
    .left-off-canvas-toggle,
    .sidebar,
    .banner-logo,
    .banner-ribbon,
    .breadcrumbs,
    .toolbar,
    footer {
        display: none !important;
    }

    .content-frame {
        padding: 0;
        margin-top: 0;
    }

    .invoice-header {
        display:block;
        text-align: right;
        font-size: 10px;
    }

    .invoice-header img {
        width: 375px !important;
    }

    .invoice-info {
    }


    tr {
        border: 1px dotted $gray-150;
    }


    h1 {
        font-size: 2em;
        font-weight: 700;
    }

    h5 {
        font-weight: bold;
    }

}