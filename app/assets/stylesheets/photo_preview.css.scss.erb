/******************************************************
** Import variables
******************************************************/
@import "global/variables";


/******************************************************
** General styles
******************************************************/

#photo_preview_modal,
#photo_preview_holder {
    height: 100%;
}

#photo_preview_holder {
    text-align: center;
}

#photo_preview_holder img {
    height: 85%;
}

.reveal-modal.dark {
    background: none;
    border: none;
    box-shadow: none;
}

.reveal-modal.dark .close-button {
    padding: 0.05em 0.25em 0.25em 0.25em;
    background: rgba(0, 0, 0, .6);
    color: $orange;

}


