/******************************************************
** Social icon bars
******************************************************/
.social-bar .column {
  max-width: 14em;
}


.social-bar {

  [class^="icon-"], [class*=" icon-"] {
    margin-right: 0.5em;
  }

  .stat-icon {
    width: 2.5em;
  }
}

/******************************************************
** Sidebar
******************************************************/
#sidebar {
  padding: 8em 1em;
}

#sidebar ul {
  color: $orange;
  font-weight: bold;
  margin: 0;
  line-height: 1.75;
}

#sidebar ul li {
  color: $gray-50;
  font-weight: normal;
  margin-left: 0.75em;
}

#sidebar li a {
  font-weight: 200;
  border: none;
  /*padding: .5em;*/
}


/******************************************************
** Breadcrumb settings
******************************************************/

.breadcrumb, .breadcrumb a {
  width: 93%;
  margin: 1em 0;
  color: $gray-100;
}

.breadcrumb a:hover {
  color: $orange;
}

.breadcrumb .fontello-links {
  position: relative;
  float: right;
  padding: .25em;
  margin: 0;
  color: $orange;
  vertical-align: bottom;
  width: auto;
}

.breadcrumb .fontello-links:hover {
  color: $orange;
}



/******************************************************
** Searchbox settings
******************************************************/
#search-string::-webkit-input-placeholder {
  color: #9c9c9c;
  font-style: italic;
}

#search-string:-moz-placeholder {
  color: #9c9c9c;
  font-style: italic;
}

#search-string:-ms-placeholder {
  color: #9c9c9c;
  font-style: italic;
}


.search-results {

  .search-thumbnail {
    float: left;
    //min-width: 14em;
    //height: 7.875rem;
    margin: 0 1em 0 0;
  }

  .search-thumbnail img {
    height: 7.875rem;
  }

  .search-summary {
    float: right;
    margin: .5em 1em 0 0;
    font-size: 1.2em;
    padding: 0.5em;
  }

  .results-item {
    position: relative;
    padding: 4em 0 3em 0;
    border-bottom: 1px dotted $gray-200;
  }

  .results-content {
    padding: 0 1em;
  }

  .results-stats {
    position: absolute;
    bottom: .25em;
    left: 0;
    font-size: .75em;
    width: 100%;
  }

  .results-stat {
    float: left;
    padding: 0 6em 0 0;
    color: $gray-75;
  }

  .results-stat.end {
    padding: 0;
  }

  .results-stat.fixed {
    min-width: 20em;
  }

}

