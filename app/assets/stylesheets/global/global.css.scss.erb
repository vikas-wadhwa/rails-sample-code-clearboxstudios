/******************************************************
** Import variables
******************************************************/
@import "variables";
@import "colors";
@import "foundation_and_overrides";
@import "drawings";
@import "tags";
@import "utilities";
@import "rails";


/******************************************************
** Icon fonts
******************************************************/
[class^="icon-"], [class*=" icon-"] {
  font-size: 1.5em;
  line-height: 2em;
  color: $gray-75;
}

[class^="icon-"].large, [class*=" icon-"].large {
  font-size: 4em;
}

.icon-imdb:after {
  content: 'IMDb';
  font-family: sans-serif;
  font-size: .75em;
  font-weight: bold;
  //padding: 1em 1em;
  //border: 1px solid rgb(225, 225, 225);
}

.icon-email {
  font-size: 1.4em;
  vertical-align: middle;
  margin: 0;
}

.stat-icon {
  width: 4.5em;
}


/******************************************************
** Forms
******************************************************/
.submission {
  border-top: 1px solid $gray-225;
  padding-top: 1em !important;
  text-align: right;
  margin-top: 1em;
}


/******************************************************
** Clickable buttons and images
******************************************************/

.button.text-left {
  padding-left: 0;
}

.icon-button {
  background: rgba(0, 0, 0, 0.75);
  border: 1px solid $gray-175;
  color: white;
  position: absolute;
  text-align: center;
  width: 2rem;
  height: 2rem;
  line-height: 0.5;
  font-size: 1rem;
  z-index: 4;
  margin: 0.5em;
  padding: .75em;
}


.icon-button:hover {
  background: white;
  color: rgb(50, 50, 50);
  border: 1px solid black;
}

.image-button {
  width: 300px;
  height: 300px;
  line-height: 1em;
  color: rgb(0, 38, 50);
  position: relative;
  display: inline-block;
  margin: 1em 1em 0 0;
  //background: $gray-25;
  background: repeating-linear-gradient( -55deg, $gray-25, rgb(45,45,45) 4px);
}

.image-button.hd-video{
  height: 265px;
}

.image-button .details-header,
.image-button .details-footer {
  position: absolute;
  color: white;
  width: 100%;
  padding: .75em;  //this is not em because the box has different size fonts within, making their paddings unequal
}

.image-button.hd-video .details-header,
.image-button.hd-video .details-footer {
  position: relative;
}

.image-button * {
  font-weight: 400;
  -moz-transition: all .5s;
  -webkit-transition: all .5s;
  transition: all .5s;
  width: 100%;
}

.image-button:hover,
.image-button.hover {

  img {
    opacity: 0.2;
  }

  [class*='details-'] {
    opacity: 1;
  }

}

.image-button .details-header {
}

.image-button .details-header .details-title {
  position: relative;
  line-height: 1.2;
  color: $orange;
}

.image-button .details-subheader {
  position:relative;
  display: block;
  line-height: 1.3;
}

.image-button.hd-video .details-subheader {
  position: absolute;
  padding: 1em;
  color: white;
  opacity: 0;
}

.image-button.hd-video:hover .details-subheader {
  opacity: 1;
}


.image-button .details-footer {
  bottom: 0;
  height: 2em;
}

.image-button .details-footer .details-bottom-left,
.image-button .details-footer .details-bottom-right {
  position: absolute;
  right: 0;
  left: 0;
  padding: 0 .75em;
}


.image-button .animate-spin.processing {
  display: none;
  position: absolute;
  text-align: center;
  color: $orange;
  font-size: 4em;
  top: 35%;
  z-index: 1;
  left: 37%;
}


.image-icon-button {
  position: relative;
  border: 1px solid transparent;
  color: $gray-75;
  border-radius: 1em;
  text-align: center;
  padding: 1em;
  -moz-transition: all .75s;
  -webkit-transition: all .75s;
  transition: all .75s;
}


.image-icon-button:hover {
  color: $orange;
}


.image-icon-button i {
  font-size: 2.25em;
}

.image-icon-button .details-bottom {
  font-size: 1.1em;
  margin-top: .5em;
}

img.hoverable {
  border: 1px solid black;
}

img.hoverable:hover {
  border: 1px solid $orange;
}

.thumbnail.hoverable {
  border: 1px solid black;
}

.thumbnail.hoverable:hover {
  border: 1px solid $orange;
  z-index: 99;
}

.thumbnail.hoverable .info-overlay {
  opacity: 0;
  position: absolute;
  text-align: center;
  width: 100%;
  font-size: 1.3em;
  font-weight: 200;
  color: rgb(255, 165, 0);
  background: rgba(0, 0, 0, 0.75);
  height: 100%;
  padding-top: 20%;
  pointer: cursor;
  -moz-transition: all .5s;
  -webkit-transition: all .5s;
  transition: all .55s;
}


.thumbnail.hoverable:hover .info-overlay {
  opacity: 1;
}

/******************************************************
** Custom checkboxes/radioboxes
******************************************************/
.radiobox,
.checkbox {
  width: 100%;
  margin: 0;
}

.radiobox .overlay ,
.checkbox .overlay {
  display: none;
}

.radiobox .overlay.on,
.checkbox .overlay.on {
  display: initial;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  padding: 0.5em 0;
  text-align: center;
  font-size: 5em;
  color: $orange;
  background: rgba(0, 0, 0, 0.7);
}

.checkbox[class^="icon-"],
.checkbox[class*=" icon-"],
.radiobox[class^="icon-"],
.radiobox[class*=" icon-"] {

  &:before{
    display: inline;
    visibility: hidden;
    margin-right: 0.5em;
    font-size: 1.25em;
  }

  &.success:before {
    visibility: visible;
  }
}

.checkbox.button.icon-check,
.radiobox.button.icon-check {
  padding-left: 1.25rem;
  color: $gray-50;
  border: none;

  &.success {
    color: white;
    background: $green;
    font-weight: bold;
  }

  &.disabled {
    // override foundation.css setting opacity to < 1
    opacity: 1;
  }

}

/******************************************************
** Image galleries
******************************************************/
.image-gallery-context-menu,
[id$=_image_container] {
  position: relative;
}


.image-gallery-grid .animate-spin.processing {
  position: absolute;
  text-align: center;
  color: rgb(248, 152, 29);
  width: 100%;
  font-size: 2em;
  padding: 25% 0;
}


.image-gallery i {
  font-size: 1em;
}

.image-gallery-grid {
  margin-left: -.9375rem !important;
}

/******************************************************
** jquery-context-menu
******************************************************/
.context-menu-item {
  padding: 0 .5em !important;
  font-size: 0.75em;

  span {
    margin-left: 0.5em;
    vertical-align: text-bottom;
  }
}

.context-menu-list {
  width: 8em !important;
}

.context-menu-item.context-menu-hover {
  background-color: $orange !important;
}


/******************************************************
** Main Section
******************************************************/
.main-section {
  overflow:auto;
  -webkit-overflow-scrolling: touch;

  &.dark {
    background-color: $gray-25;
  }

}

.modal-action {
  position: absolute;
  bottom: 0;
  right: 1em;
}



/******************************************************
** Navigation menu
******************************************************/
a[class*="menu-icon"] {
  width: 2.5em;
  height: 2.5em;
  display: inline;
  z-index: 1;
  position: absolute;
}

.menu-icon {
  bottom: 2.5em;
  left: 1.5em;
}


/******************************************************
** Banner settings
******************************************************/
.banner-ribbon {
  position: fixed;
  background: $gray-50;
  font-family: "Open Sans";
  width: 100%;
  z-index: 99;
}

#banner-menu {
  margin: 2em 0 0 7em !important;
}

#banner-menu li {
  display: inline;
  list-style-type: none;
  padding: 2em;
}

.banner-menu-items {
  font-size: 1em;
  color: $orange;
}

/*#banner-menu-items li a:link {color: $orange;}       unvisited link*/
/*#banner-menu-items li a:visited  {color: $orange;}   visited link*/
.banner-menu-items:hover {
  color: #FFFFFF;
}

/* mouse over link*/
/*#banner-menu-items li a:active  {color: $orange;}   selected link*/

.menu-icon-toggle {
  position: absolute;
  text-align: center;
  background: rgb(25,25,25);
  border-right: 1px solid rgb(0, 0, 0);

  -moz-box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.6);
  -webkit-box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.6);
  box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.6);

  color: $orange;
  z-index: 999;

  margin-top: 0;
  width: 4em;
  padding: 1em 0;
}

.banner-menu-items.icon-menu {
  font-size: 1.5em;
  line-height: 1.25em;
  color: $gray-200;
  -moz-transition: all .5s ease;
  -webkit-transition: all .5s ease;
  -o-transition: all .5s ease;
  transition: all .5s ease;
  -webkit-animation-fill-mode: forwards;
  -moz-animation-fill-mode: forwards;
  -ms-animation-fill-mode: forwards;
  -o-animation-fill-mode: forwards;
  animation-fill-mode: forwards;

  -moz-transform: rotate(0deg);
  -webkit-transform: rotate(0deg);
  -o-transform: rotate(0deg);
  transform: rotate(0deg);

}

.banner-logo {
  position: fixed;
  z-index: 100;
  margin: 1em 0 0 6em;
}



/******************************************************
** Footer settings
******************************************************/


.lt-ie9 footer {
  background: none;
  -ms-filter:progid:DXImageTransform.Microsoft.gradient(startColorstr=#CC000000,endColorstr=#CC000000);
  filter:progid:DXImageTransform.Microsoft.gradient(startColorstr=#CC000000,endColorstr=#CC000000);
  zoom: 1;
  padding: 1em;
}

footer {

  background-color: black;
  color: $gray-200;
  font-size: 14px;

  a {
    color: $gray-200;
  }

  img {
    width: 25px;
    height: 25px;
    margin-right: .5em;
  }


  h1, h2, h3, h4, h5, h6 {
    color: $orange;
    margin: 0;
    font-weight: 400;
  }

  .social-bar .column {
    font-size: 12px;
    color: $gray-200;
  }

  .sitemap {
    display: block;
    line-height: 2;
  }

  .copyright {
    margin-top: 10em;
  }

