/******************************************************
** Import variables
******************************************************/
@import "global/variables";

/******************************************************
** General styles
******************************************************/
.responsive-form label {
    width: 7em;
}

.floating-container {
    min-height: 0;
    margin-top: 1em;
}

#accordion {
    margin-top: 24em;
}

#accordion .floating-container {
    padding: .25em 0;
    overflow: hidden;
    margin-top: 0;
}

.spacer {
    min-height: 1em;
}

.multi-column {
    min-width: 15em;
}

.multi-column .section-details {
    color: $gray-100;
    font-size: .9em;
}

.section-details label {
    vertical-align: inherit;
}

.multi-column label {
}

.column-1 label {
    width: 12em;
}

.column-2 label {
    width: 10em;
    margin-left: 4em;
}

.column-3 label {
}

.profile-image {
    margin-right: 2em;
}

#file-upload-form {
    clear: both;
}

#table_mediafiles thead td {
    font-size: 1.25em;
}

#table_mediafiles tbody td {
    font-size: .8em;
    color: $gray-100;
}

#table_mediafiles td {
    padding: .1em;
}

.profile-image {
    width: 14em;
}